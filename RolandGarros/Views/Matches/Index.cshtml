@model IEnumerable<RolandGarros.Models.MatchsListViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Joueur1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Joueur2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Joueur1.Prenom)
                    @Html.DisplayFor(modelItem => item.Joueur1.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Joueur2.Prenom)
                @Html.DisplayFor(modelItem => item.Joueur2.Nom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
